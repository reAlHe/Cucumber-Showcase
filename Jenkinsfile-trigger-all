pipeline {
    agent any
    environment {
        FLAG_FILE = "${env.WORKSPACE}/scm_change_detected.flag"
    }
    triggers {
        cron('H/2 * * * *') // Runs at 2 AM every night
    }
    stages {
        stage('Trigger nightly test for all tags') {
            steps {
                script {
                    if (fileExists(FLAG_FILE)) {
                        echo 'Running all tests'
                        build job: 'extended-test-suite', wait: true
                    }
                    else {
                        echo 'No changes, nothing to do'
                    }
                }
            }
        }
    }
    post {
        always {
            script {
                if (fileExists(FLAG_FILE)) {
                    deleteFile FLAG_FILE
                }
            }
        }
    }
}